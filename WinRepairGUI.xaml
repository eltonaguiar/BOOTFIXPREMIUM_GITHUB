<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Miracle Boot v7.2.0 - Advanced Recovery (GitHub + Cursor) - Tip: Maximize window (F11) to see all options"
 Width="900" Height="650" WindowStartupLocation="CenterScreen" Background="#F0F0F0" Focusable="True" MinWidth="800" MinHeight="500">
<Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <!-- Maximize Suggestion Banner -->
    <Border Grid.Row="0" Name="MaximizeBanner" Background="#FFF3CD" BorderBrush="#FFC107" BorderThickness="0,0,0,2" Padding="10,5" Visibility="Collapsed">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="[TIP]" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold" Foreground="#856404"/>
            <TextBlock Text="Tip: Maximize this window (press F11 or click the maximize button) to see all options and prevent button overlap." 
                       VerticalAlignment="Center" TextWrapping="Wrap" Foreground="#856404" FontSize="11"/>
            <Button Name="BtnDismissMaximizeTip" Content="X" Width="25" Height="25" Margin="10,0,0,0" 
                    Background="Transparent" BorderThickness="0" Foreground="#856404" 
                    ToolTip="Dismiss this tip" Padding="0" FontSize="12" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Border>
    
    <!-- Utility Toolbar -->
    <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#E5E5E5" Margin="10,5">
        <Menu VerticalAlignment="Center" Margin="5,0,10,0">
            <MenuItem Header="File" FontWeight="Bold">
                <MenuItem Header="View Cached Locations" Name="BtnViewCache" ToolTip="View cached export locations and saved paths"/>
                <MenuItem Header="Clear Cache" Name="BtnClearCache" ToolTip="Clear all cached locations"/>
                <Separator/>
                <MenuItem Header="Export Logs Location..." Name="BtnSetLogLocation" ToolTip="Set default location for exported logs"/>
                <MenuItem Header="BCD Backup Location..." Name="BtnSetBCDLocation" ToolTip="Set default location for BCD backups"/>
                <MenuItem Header="Driver Export Location..." Name="BtnSetDriverLocation" ToolTip="Set default location for driver exports"/>
            </MenuItem>
            <MenuItem Header="Emergency Repair" FontWeight="Bold">
                <MenuItem Header="Emergency Boot Repair V1" Name="BtnEmergencyBoot1" ToolTip="Run standalone emergency boot repair (V1) - No dependencies required"/>
                <MenuItem Header="Emergency Boot Repair V2" Name="BtnEmergencyBoot2" ToolTip="Run emergency boot repair V2 - Alternative implementation"/>
                <MenuItem Header="Emergency Boot Repair V3" Name="BtnEmergencyBoot3" ToolTip="Run emergency boot repair V3 - Minimal last resort"/>
                <MenuItem Header="Emergency Boot Repair V4" Name="BtnEmergencyBoot4" ToolTip="Run emergency boot repair V4 - Intelligent minimal repair with progress and smart diagnostics"/>
                <Separator/>
                <MenuItem Header="Emergency Boot Repair Wrapper" Name="BtnEmergencyBootWrapper" ToolTip="Run all emergency repairs with automatic failover (V4 â†’ V1 â†’ V2 â†’ V3)"/>
            </MenuItem>
            <MenuItem Header="Utilities" FontWeight="Bold">
                <MenuItem Header="Notepad" Name="BtnNotepad" ToolTip="Open Notepad"/>
                <MenuItem Header="Registry Editor" Name="BtnRegistry" ToolTip="Open Registry Editor"/>
                <MenuItem Header="PowerShell" Name="BtnPowerShell" ToolTip="Open PowerShell"/>
                <Separator/>
                <MenuItem Header="System Restore" Name="BtnRestore" ToolTip="Open System Restore Points"/>
                <MenuItem Header="Disk Management" Name="BtnDiskManagement" ToolTip="Open Disk Management"/>
                <MenuItem Header="Restart Explorer" Name="BtnRestartExplorer" ToolTip="Restart Windows Explorer if it crashed"/>
                <Separator/>
                <MenuItem Header="Enable Network" Name="BtnEnableNetwork" ToolTip="Enable network adapters and test internet"/>
                <MenuItem Header="Network Diagnostics" Name="BtnNetworkDiagnostics" ToolTip="Comprehensive network diagnostics and driver management"/>
                <MenuItem Header="Keyboard Symbols" Name="BtnKeyboardSymbols" ToolTip="Keyboard symbol helper and ALT code reference"/>
            </MenuItem>
            <MenuItem Header="Help" FontWeight="Bold">
                <MenuItem Header="Boot Fixer Instructions" Name="BtnMenuBootFixerInstructions" ToolTip="View detailed instructions for running MiracleBoot in Windows Repair environment"/>
                <Separator/>
                <MenuItem Header="Support" Name="BtnSupport" ToolTip="Contact support for issues or feedback"/>
            </MenuItem>
            <MenuItem Header="Resources" FontWeight="Bold">
                <MenuItem Header="ChatGPT Help" Name="BtnChatGPT" ToolTip="Open ChatGPT for boot assistance help"/>
                <Separator/>
                <MenuItem Header="Recommended Recovery Tools" Name="BtnRecommendedRecoveryTools" ToolTip="Must-have recovery tools: Hiren BootCD PE, Macrium Reflect, etc."/>
                <MenuItem Header="Backup Software Guide" Name="BtnBackupGuide" ToolTip="Guide to backup software and best practices"/>
                <MenuItem Header="Recovery Tools (Free)" Name="BtnRecoveryToolsFree" ToolTip="Free recovery tools like Hiren BootCD, Ventoy, etc."/>
                <MenuItem Header="Recovery Tools (Paid)" Name="BtnRecoveryToolsPaid" ToolTip="Paid recovery tools like Macrium Reflect, Acronis, etc."/>
                <MenuItem Header="Backup Strategy Guide" Name="BtnBackupStrategy" ToolTip="3-2-1 backup rule and best practices"/>
                <MenuItem Header="Hardware Recommendations" Name="BtnHardwareRecs" ToolTip="Hardware recommendations for backups"/>
                <Separator/>
                <MenuItem Header="Microsoft Professional Support" Name="BtnMicrosoftSupport" ToolTip="Microsoft pay-per-incident support options and costs"/>
                <MenuItem Header="Local Technician Alternative" Name="BtnLocalTechnician" ToolTip="Benefits of local technicians vs Microsoft support"/>
            </MenuItem>
            <MenuItem Header="Settings" FontWeight="Bold">
                <MenuItem Header="Dark Mode" Name="BtnDarkMode" ToolTip="Switch to dark theme"/>
                <MenuItem Header="Light Mode" Name="BtnLightMode" ToolTip="Switch to light theme"/>
                <Separator/>
                <MenuItem Header="Compact UI" Name="BtnCompactUI" ToolTip="Switch to compact layout for smaller screens"/>
                <MenuItem Header="Standard UI" Name="BtnStandardUI" ToolTip="Switch to standard layout"/>
                <Separator/>
                <MenuItem Name="InterfaceScaleMenuItem">
                    <MenuItem.Header>
                        <TextBlock Text="Interface Scale"/>
                    </MenuItem.Header>
                    <StackPanel Width="300" Margin="10" Background="White">
                        <TextBlock Text="Make interface elements bigger or smaller" TextWrapping="Wrap" Margin="0,0,0,10" Foreground="Gray" FontSize="11"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Small" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="11" Foreground="Gray"/>
                            <Slider Name="InterfaceScaleSlider" Width="200" Minimum="0.5" Maximum="2.0" Value="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                            <TextBlock Text="Big" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="11" Foreground="Gray"/>
                        </StackPanel>
                        <Button Name="BtnInterfaceScaleReset" Content="Reset" Width="80" Height="30" HorizontalAlignment="Right" Background="#6c757d" Foreground="White" ToolTip="Reset interface scale to 100%"/>
                    </StackPanel>
                </MenuItem>
            </MenuItem>
        </Menu>
        <Button Name="BtnSwitchToTUI" Width="35" Height="25" Margin="2" ToolTip="Switch to Command Line Mode (TUI)" Background="#2D2D30" Foreground="White" FontFamily="Consolas" FontSize="12" Padding="0" VerticalAlignment="Center">
            <TextBlock Text="&gt;_" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Button>
        <Separator Margin="10,0" VerticalAlignment="Center"/>
        <TextBlock Text="Zoom:" VerticalAlignment="Center" Margin="10,0,5,0" Foreground="Gray" FontSize="11"/>
        <Button Name="BtnZoomOut" Content="-" Width="30" Height="25" Margin="2" ToolTip="Zoom Out (Smaller)" Background="#6c757d" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBlock Name="ZoomLevel" Text="100%" Width="45" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0" Foreground="Black" FontSize="11" FontWeight="Bold"/>
        <Button Name="BtnZoomIn" Content="+" Width="30" Height="25" Margin="2" ToolTip="Zoom In (Larger)" Background="#6c757d" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
        <Button Name="BtnZoomReset" Content="Reset" Width="50" Height="25" Margin="2" ToolTip="Reset Zoom to 100%" Background="#6c757d" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
        <Separator Margin="10,0" VerticalAlignment="Center"/>
        <TextBlock Name="NetworkStatus" Text="Network: Unknown" VerticalAlignment="Center" Margin="5,0" Foreground="Gray"/>
        <TextBlock Name="EnvStatus" Text="Environment: Detecting..." VerticalAlignment="Center" Margin="10,0" Foreground="Gray"/>
</StackPanel>
    
    <TabControl Grid.Row="2" Margin="10" Name="MainTabs">
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="[!]" FontSize="14" Foreground="Red" FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="Boot Fixer"/>
                    <Button Name="BtnBootFixerInfo" Width="20" Height="20" Margin="5,0,0,0" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Click for detailed information about Boot Fixer options">
                        <TextBlock Text="[i]" FontSize="12" Foreground="#0078D7" FontWeight="Bold"/>
                    </Button>
                    <Button Name="BtnBootFixerNotepad" Width="20" Height="20" Margin="2,0,0,0" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Open help in Notepad (useful for low resolution screens)">
                        <TextBlock Text="[?]" FontSize="12" Foreground="#28a745"/>
                    </Button>
                </StackPanel>
            </TabItem.Header>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- One-Click Repair Section -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="ONE-CLICK REPAIR" FontSize="18" FontWeight="Bold" Foreground="#2E7D32"/>
                    <Button Name="BtnOneClickInfo" Width="20" Height="20" Margin="5,0,0,0" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Click for information about One-Click Repair options">
                        <TextBlock Text="[i]" FontSize="12" Foreground="#2E7D32" FontWeight="Bold"/>
                    </Button>
                    <Button Name="BtnOneClickNotepad" Width="20" Height="20" Margin="2,0,0,0" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Open help in Notepad">
                        <TextBlock Text="[?]" FontSize="12" Foreground="#28a745"/>
                    </Button>
                    <Button Name="BtnOneClickResize" Content="â¤¢" Width="28" Height="22" Margin="10,0,0,0" Background="Transparent" BorderThickness="1" BorderBrush="#2E7D32" Foreground="#2E7D32" Cursor="Hand" ToolTip="Toggle maximize/restore window" FontSize="12" FontWeight="Bold"/>
                    <Button Name="BtnBootFixerInstructions" Content="ðŸ“– Instructions" Width="120" Height="25" Margin="15,0,0,0" Background="#0078D7" Foreground="White" FontWeight="Bold" Cursor="Hand" ToolTip="View detailed instructions for running MiracleBoot in Windows Repair environment"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <Button Content="Preview Only (Dry Run)" Name="BtnOneClickPreview" Width="180" Height="40" Background="#6c757d" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" ToolTip="Preview what repairs would be done without making changes"/>
                    <Button Content="Execute Repairs" Name="BtnOneClickRepair" Width="180" Height="40" Background="#28a745" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" ToolTip="Run comprehensive automated boot repair. If this fails, automatically tries Emergency Fixes 1-4 sequentially until boot is restored."/>
                    <Button Content="Brute Force Mode" Name="BtnOneClickBruteForce" Width="180" Height="40" Background="#dc3545" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" ToolTip="Aggressive repair mode - use when standard repairs fail. If this fails, automatically tries Emergency Fixes 1-4 sequentially until boot is restored."/>
                    <Button Content="ðŸ”§ Repair Wizard" Name="BtnRepairWizard" Width="180" Height="40" Background="#6f42c1" Foreground="White" FontWeight="Bold" Margin="10,0,0,0" ToolTip="Guided repair sequence: Runs V4 (Intelligent) â†’ Brute Force â†’ V1 â†’ V2 â†’ V3, checking after each step. Stops if boot is fixed."/>
                </StackPanel>
                
                <!-- Emergency Fixes Section -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="EMERGENCY FIXES" FontSize="16" FontWeight="Bold" Foreground="#dc3545" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="Emergency Fix V1" Name="BtnEmergencyFixV1" Width="150" Height="35" Background="#dc3545" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" ToolTip="Run Emergency Boot Repair V1 (Standard Repair) - Standalone emergency fix"/>
                    <Button Content="Emergency Fix V2" Name="BtnEmergencyFixV2" Width="150" Height="35" Background="#dc3545" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" ToolTip="Run Emergency Boot Repair V2 (Alternative Implementation) - Standalone emergency fix"/>
                    <Button Content="Emergency Fix V3" Name="BtnEmergencyFixV3" Width="150" Height="35" Background="#dc3545" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" ToolTip="Run Emergency Boot Repair V3 (Minimal Last Resort) - Standalone emergency fix"/>
                    <Button Content="Emergency Fix V4" Name="BtnEmergencyFixV4" Width="150" Height="35" Background="#28a745" Foreground="White" FontWeight="Bold" Margin="10,0,0,0" ToolTip="Run Emergency Boot Repair V4 (Intelligent Minimal Repair) - Fastest, checks issues first and only fixes what's broken"/>
                </StackPanel>
                
                <TextBlock Grid.Row="3" Name="txtOneClickStatus" Text="Ready. Click 'Execute Repairs' to start automated boot repair." Margin="0,0,0,10" TextWrapping="Wrap" FontSize="12"/>
                <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
                    <TextBox Name="FixerOutput" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="10" Background="White" Foreground="Black" MinHeight="300"/>
                </ScrollViewer>
            </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Volumes &amp; Health">
            <DockPanel Margin="10">
                <Button DockPanel.Dock="Top" Content="Refresh Volume List" Height="35" Name="BtnVol" Background="#0078D7" Foreground="White" FontWeight="Bold"/>
                <ListView Name="VolList" Margin="0,10,0,0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Letter" DisplayMemberBinding="{Binding DriveLetter}" Width="50"/>
                            <GridViewColumn Header="Label" DisplayMemberBinding="{Binding FileSystemLabel}" Width="150"/>
                            <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size}" Width="100"/>
                            <GridViewColumn Header="Status" DisplayMemberBinding="{Binding HealthStatus}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
</TabItem>

<TabItem Header="BCD Editor">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Load/Refresh BCD" Height="35" Name="BtnBCD" Background="#0078D7" Foreground="White" Width="150" Margin="0,0,10,0">
                        <Button.ToolTip>
                            <ToolTip Content="Reloads the Boot Configuration Data (BCD) from your system. Use this to refresh the list after making changes or if entries seem out of date."/>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="Create Backup" Height="35" Name="BtnBCDBackup" Background="#28a745" Foreground="White" Width="130" Margin="0,0,10,0">
                        <Button.ToolTip>
                            <ToolTip Content="Creates a backup of your current BCD configuration before making changes. Highly recommended before editing boot entries."/>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="Fix Duplicates" Height="35" Name="BtnFixDuplicates" Background="#ffc107" Foreground="Black" Width="130" Margin="0,0,10,0">
                        <Button.ToolTip>
                            <ToolTip Content="Automatically fixes duplicate boot entry names by appending volume labels. Prevents confusion in the boot menu."/>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="Sync to All EFI Partitions" Height="35" Name="BtnSyncBCD" Background="#6f42c1" Foreground="White" Width="200" Margin="0,0,10,0">
                        <Button.ToolTip>
                            <ToolTip Content="Synchronizes BCD configuration to all EFI System Partitions. Ensures the same boot menu appears regardless of which drive BIOS boots from."/>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="Boot Diagnosis" Height="35" Name="BtnBootDiagnosisBCD" Background="#17a2b8" Foreground="White" Width="150" Margin="0,0,10,0">
                        <Button.ToolTip>
                            <ToolTip Content="Runs comprehensive diagnostics on your boot configuration to identify potential issues and provide recommendations."/>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="[?] Help" Height="35" Name="BtnBCDHelp" Background="#6c757d" Foreground="White" Width="100">
                        <Button.ToolTip>
                            <ToolTip Content="View detailed information about all BCD parameters, their purposes, and context-aware suggestions based on your current setup."/>
                        </Button.ToolTip>
                    </Button>
</StackPanel>
                
                <!-- Main Content with Tabs -->
                <TabControl Grid.Row="1" Name="BCDTabControl">
                    <TabItem Header="Basic Editor">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="5">
                                <TextBlock Text="BCD Boot Entries" FontWeight="Bold" Margin="0,0,0,5">
                                    <TextBlock.ToolTip>
                                        <ToolTip Content="List of all boot entries configured in your system. Green entries are set as default. Select an entry to edit its properties."/>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                                <ListBox Name="BCDList" Height="350" Margin="0,0,0,10">
                                    <ListBox.ToolTip>
                                        <ToolTip Content="Select a boot entry from this list to view and edit its properties. Entries marked with [DEFAULT] will boot automatically after the timeout period."/>
                                    </ListBox.ToolTip>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding DisplayText}" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#0078D7"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsDefault}" Value="True">
                                                                    <Setter Property="Foreground" Value="#28a745"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Id}" FontSize="10" Foreground="Gray"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <TextBox Name="BCDBox" AcceptsReturn="True" Height="150" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" IsReadOnly="True" Background="#222" Foreground="#00FF00">
                                    <TextBox.ToolTip>
                                        <ToolTip Content="Raw BCD output showing detailed information about all boot entries. This is the same output you would see from running 'bcdedit /enum /v' in Command Prompt."/>
                                    </TextBox.ToolTip>
                                </TextBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="5" Background="#E5E5E5">
                                <TextBlock Text="Edit Selected Entry" FontWeight="Bold" Margin="5"/>
                                <TextBlock Text="Identifier (GUID):" Margin="5,5,0,0">
                                    <TextBlock.ToolTip>
                                        <ToolTip Content="The unique identifier (GUID) for this boot entry. This is automatically generated by Windows and cannot be changed. Used internally by the boot manager to reference this entry."/>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                                <TextBox Name="EditId" Margin="5" IsReadOnly="True" Background="#DDD">
                                    <TextBox.ToolTip>
                                        <ToolTip Content="The unique identifier (GUID) for this boot entry. This is automatically generated by Windows and cannot be changed."/>
                                    </TextBox.ToolTip>
                                </TextBox>
                                <TextBlock Text="Description:" Margin="5,5,0,0">
                                    <TextBlock.ToolTip>
                                        <ToolTip Content="The current description of this boot entry as stored in the BCD. This is what appears in the boot menu. You can change it using the 'New Friendly Name' field below."/>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                                <TextBox Name="EditDescription" Margin="5" IsReadOnly="True" Background="#DDD">
                                    <TextBox.ToolTip>
                                        <ToolTip Content="The current description of this boot entry. This field is read-only - use 'New Friendly Name' to change it."/>
                                    </TextBox.ToolTip>
                                </TextBox>
                                <TextBlock Text="New Friendly Name:" Margin="5,5,0,0">
                                    <TextBlock.ToolTip>
                                        <ToolTip Content="Enter a new friendly name for this boot entry. This will replace the current description and appear in the boot menu. Examples: 'Windows 11', 'Windows 10 (Safe Mode)', 'Linux Ubuntu'."/>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                                <TextBox Name="EditName" Margin="5">
                                    <TextBox.ToolTip>
                                        <ToolTip Content="Enter a new friendly name for this boot entry. This will appear in the boot menu when you start your computer."/>
                                    </TextBox.ToolTip>
                                </TextBox>
                                <Button Content="Update Description" Name="BtnUpdateBcd" Margin="5" Height="25">
                                    <Button.ToolTip>
                                        <ToolTip Content="Updates the boot entry description with the name you entered in 'New Friendly Name'. This change will appear in the boot menu after restart."/>
                                    </Button.ToolTip>
                                </Button>
                                <Button Content="Set as Default Boot" Name="BtnSetDefault" Margin="5" Height="25" Background="#D78700" Foreground="White">
                                    <Button.ToolTip>
                                        <ToolTip Content="Sets this boot entry as the default option. Windows will automatically boot into this entry after the timeout period if you don't make a selection."/>
                                    </Button.ToolTip>
                                </Button>
                                <Separator Margin="5,10"/>
                                <TextBlock Text="Boot Timeout (Seconds):" Margin="5">
                                    <TextBlock.ToolTip>
                                        <ToolTip Content="The number of seconds the boot menu will wait before automatically starting the default boot entry. Range: 0-9999 seconds. 0 = no timeout (menu stays until you choose)."/>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                                <TextBox Name="TxtTimeout" Margin="5">
                                    <TextBox.ToolTip>
                                        <ToolTip Content="Enter the timeout in seconds (0-9999). 0 means the menu will wait indefinitely. Recommended: 10-30 seconds for most users."/>
                                    </TextBox.ToolTip>
                                </TextBox>
                                <Button Content="Save Timeout" Name="BtnTimeout" Margin="5" Height="25">
                                    <Button.ToolTip>
                                        <ToolTip Content="Saves the boot timeout value. This determines how long the boot menu will wait before automatically starting the default entry."/>
                                    </Button.ToolTip>
                                </Button>
                            </StackPanel>
                        </Grid>
</TabItem>

                    <TabItem Header="Advanced Properties">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Select an entry from Basic Editor to edit all properties" FontStyle="Italic" Margin="5" Foreground="Gray"/>
                            
                            <DataGrid Grid.Row="1" Name="BCDPropertiesGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="False" Margin="5">
                                <DataGrid.ToolTip>
                                    <ToolTip Content="Advanced properties for the selected boot entry. Edit values directly in this grid. Click 'Help' button for detailed parameter descriptions."/>
                                </DataGrid.ToolTip>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Property" Binding="{Binding Name}" Width="200" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="5">
                                <Button Content="Save Changes" Name="BtnSaveProperties" Height="30" Width="120" Background="#28a745" Foreground="White" Margin="5,0"/>
                                <Button Content="Reset" Name="BtnResetProperties" Height="30" Width="80" Margin="5,0"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </TabItem>

        <TabItem Header="Boot Menu Simulator">
            <StackPanel Background="#003366" Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Load BCD Entries" Name="BtnSimLoadBCD" Height="35" Width="150" Background="#0078D7" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" ToolTip="Load and refresh boot entries from BCD"/>
                </StackPanel>
                <TextBlock Text="Windows Boot Manager" Foreground="White" FontSize="22" HorizontalAlignment="Center" Margin="20"/>
                <TextBlock Text="Choose an operating system to start:" Foreground="White" Margin="40,0,0,10"/>
                <ListBox Name="SimList" Height="200" Width="500" Background="#003366" Foreground="White" BorderThickness="0" FontSize="18" Padding="20">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBlock Name="SimTimeout" Text="Seconds until auto-start: 30" Foreground="White" HorizontalAlignment="Center" Margin="20"/>
                <TextBlock Text="Use the BCD Editor tab to modify these entries." Foreground="#CCC" FontSize="10" HorizontalAlignment="Center"/>
</StackPanel>
</TabItem>

        <TabItem Header="Driver Diagnostics">
            <DockPanel Margin="10">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Scan for Driver Errors" Height="35" Name="BtnDetect" Background="#dc3545" Foreground="White" Width="180" Margin="0,0,10,0"/>
